@model Pren.Web.Models.ViewModels.OrderFlow.OrderFlowViewModel

@{
    Layout = "~/Views/Shared/Layouts/_OrderFlow.cshtml";
}

@section PageSpecificJavascriptInHeader
{    
    @Html.Raw(Model.CurrentPage.ScriptLoadInHeader)
}


<div class="container main">
    <div class="row main__header">
        <div class="main__header-wrapper">
            <div class="col-md-3 hidden-xs hidden-sm main__header-discount">
                <a href="@Model.CurrentPage.CompanyPortalUrl" class="discount-button">
                    <div class="discount-button__content"> <span class="text">Volymrabatt för företag</span><i class="external-icon"></i></div>
                </a>
            </div>
            <div class="col-xs-12 col-md-6 main__header-title">
                <div class="header-title">@Model.CurrentPage.Heading</div>
                <div class="header-sub-title">@Model.CurrentPage.SubHeading</div>
            </div>
            @if (!string.IsNullOrEmpty(Model.CurrentPage.CompareText))
            {
                <div class="col-md-3 hidden-xs main__header-compare"><a href="#compare-package" class="compare-package-link"><span class="text">Jämför paket</span></a></div>
            }
        </div>
        <div class="col-xs-12 visible-xs visible-sm main__header-discount">
            <a href="@Model.CurrentPage.CompanyPortalUrl" class="discount-button">
                <div class="discount-button__content"> <span class="text">Volymrabatt för företag</span><i class="external-icon"></i></div>
            </a>
        </div>
    </div>

    @if (Model.Packages != null)
    {
        Html.RenderPartial("~/Views/Shared/Partials/OrderFlow/_OrderPackages.cshtml", Model);
    }

    @if (!string.IsNullOrEmpty(Model.CurrentPage.CompareText))
    {
        <div id="compare-package" class="row main__compare-package">
            @Html.Raw(Model.CurrentPage.CompareText.Replace("[pageurl]", Model.PageUrl).Replace("[querystring]", Model.QueryString))
        </div>
    }
</div>


@section PageSpecificJavaScript
{
    @Html.Raw(Model.CurrentPage.ScriptLoad)
}



